// splice(startIndex)
// splice(startIndex,deleteCount)
// splice(startIndex,deleteCount, InsertItems)
// let a = [1,2,3,4,5,6,7,8,9]
// 1.
// a.splice(5)
// console.log(a)
// then the output will be [1,2,3,4,5]
// 2.
// a.splice(5,1)
// console.log(a)
// then the output will be [1,2,3,4,5,7,8,9]
// if
// a.splice(5,3)
// output will be [1,2,3,4,5,9]
// 3.
// a.splice(4,1,10)
// console.log(a)
// output will be [1,2,3,4,10,6,7,8,9]
// if u want to add new value
// a.splice(4,1,10,20,30)
// then output will be [1,2,3,4,10,20,30,6,7,8,9]
// if u dont want to delet any value then put 0 on deleteCount-a.splice(4,0,10,20)

